/**index.wxss**/

.anim {
  animation: play 1s ease-out;
}

@keyframes play {
  0% {
    transform: rotateZ(0deg);
    /*
        transform:rotateX(0deg);
        transform:rotate(0deg);
        transform:rotate(0deg);
        */
  }

  100% {
    transform: rotateZ(360deg);
    /*
        transform:rotateX(360deg);
        transform:rotate(360deg);
        transform:rotate(-360deg);
        */
  }
}

