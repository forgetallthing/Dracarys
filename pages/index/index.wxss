  margin: 10rpx;
}

.fontColor {
  color: #02c39a;
  font-size: 28px;
}

.tagLeft {
  width: 90%;
  margin-top: 15px;
}

.contentColor {
  line-height: 25px;
  font-size: 18px;
  animation-name: myfirst;
  animation-duration: 5s;
  animation-timing-function: linear;
  animation-delay: 2s;
  animation-iteration-count: infinite;
  animation-direction: alternate;
  animation-play-state: running;
}

@keyframes myfirst {
  0% {
    color: #fe938c;
  }

  25% {
    color: #e6b89c;
  }

  50% {
    color: #ead2ac;
  }

  75% {
    color: #9cafb7;
  }

  100% {
    color: #4281a4;
  }
}

